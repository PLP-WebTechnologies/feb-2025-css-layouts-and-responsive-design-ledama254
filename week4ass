        }
        
        .menu-toggle {
            display: none;
            cursor: pointer;
        }
        
        /* Main Content - CSS Grid */
        .container {
            display: grid;
            grid-template-columns: 1fr;
            gap: 1.5rem;
            padding: 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
        }
        
        /* Grid items */
        .card {
            background-color: white;
